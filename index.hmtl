        async function buscarCoordenadas(endereco, isBase = false) {
            const cacheKey = endereco.toLowerCase();
            
            if (cacheCoordenadas[cacheKey]) {
                return cacheCoordenadas[cacheKey];
            }

            const url = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(endereco)}&limit=1&countrycodes=br&addressdetails=1`;
            
            try {
                const response = await fetch(url, {
                    headers: { 'User-Agent': 'ControleKM/1.0' }
                });
                
                if (!response.ok) {
                    throw new Error('Erro na API de geocodifica√ß√£o');
                }
                
                const data = await response.json();
                
                if (data && data.length > 0) {
                    const coords = { 
                        lat: parseFloat(data[0].lat), 
                        lng: parseFloat(data[0].lon) 
                    };
                    cacheCoordenadas[cacheKey] = coords;
                    salvarDadosLocais(); // Salva cache
                    return coords;
                } else {
                    alert('Endere√ßo n√£o encontrado. Tente refinar a busca.');
                    return null;
                }
            } catch (error) {
                console.error('Erro geocoding:', error);
                alert('Erro ao buscar coordenadas. Verifique conex√£o.');
                return null;
            }
        }
