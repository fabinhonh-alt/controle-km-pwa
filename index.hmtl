                    if (map) {
                        map.setView([lat, lng], 15);
                        L.marker([lat, lng]).addTo(map)
                            .bindPopup(`<b>Voc√™ est√° aqui</b><br>${enderecoGPS || 'GPS detectado'}`)
                            .openPopup();
                    }

                    btnGPS.disabled = false;
                    btnGPS.innerHTML = '‚úÖ GPS Ativo';
                    atualizarBotoesDestinos();
                    alert('‚úÖ GPS capturado!');
                },
                (error) => {
                    alert('Erro GPS: ' + error.message + '. Use base fixa.');
                    btnGPS.disabled = false;
                    btnGPS.innerHTML = 'üìç Usar GPS Atual';
                },
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 60000
                }
            );
        }

        async function reverseGeocode(lat, lng) {
