        // Fun√ß√£o GPS
        async function usarGPSAtual() {
            const btnGPS = document.getElementById('btnGPS');
            btnGPS.disabled = true;
            btnGPS.innerHTML = '<span class="loading"></span> Buscando GPS...';

            if (!navigator.geolocation) {
                alert('GPS n√£o suportado. Use base fixa.');
                btnGPS.disabled = false;
                btnGPS.innerHTML = 'üìç Usar GPS Atual';
                return;
            }

            navigator.geolocation.getCurrentPosition(
                async (position) => {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    
                    // Reverse geocoding pra pegar endere√ßo aproximado
                    const enderecoGPS = await reverseGeocode(lat, lng);
                    
                    posicaoGPSAtual = {
                        lat,
                        lng,
                        nome: 'GPS Atual',
                        endereco: enderecoGPS || 'Localiza√ß√£o detectada'
                    };

