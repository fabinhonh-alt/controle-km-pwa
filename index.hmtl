                const response = await fetch(url, { headers: { 'User-Agent': 'ControleKM/1.0' } });
                const data = await response.json();
                return data.display_name || 'Endere√ßo n√£o identificado';
            } catch (error) {
                console.error('Erro reverse geocoding:', error);
                return null;
            }
        }

