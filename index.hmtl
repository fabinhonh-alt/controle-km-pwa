            if (sequenciaAtual.length === 0) {
                statusDiv.style.display = 'none';
                totalElement.textContent = '0 km';
                return;
            }

            statusDiv.style.display = 'block';
            statusDiv.innerHTML = '<strong>Calculando rota...</strong>';
            totalElement.textContent = 'Calculando...';

            try {
                const pontoInicial = posicaoGPSAtual || base;
                if (!pontoInicial) {
                    alert('Configure base ou use GPS primeiro.');
                    return;
                }

                let sequenciaFinal = [...sequenciaAtual];
                
                // Otimiza√ß√£o de rota se ativada
                if (document.getElementById('otimizarRota').checked && sequenciaAtual.length > 1) {
                    const coordsParaOtimizar = [pontoInicial, ...sequenciaAtual].map(p => `${p.lng},${p.lat}`).join(';');
                    const urlTrip = `https://router.project-osrm.org/trip/v1/driving/${coordsParaOtimizar}?source=first&destination=first&roundtrip=true`;
                    
                    const tripResponse = await fetch(urlTrip);
                    const tripData = await tripResponse.json();
                    
                    if (tripData.code === 'Ok' && tripData.trips.length > 0) {
                        const ordemOtimizada = tripData.waypoints.map(wp => wp.waypoint_index);
                        sequenciaFinal = ordemOtimizada.slice(1, -1).map(idx => sequenciaAtual[idx - 1]);
                        console.log('Rota otimizada:', sequenciaFinal.map(s => s.nome));
                    }
                }

                // Rota completa: base ‚Üí ag√™ncias ‚Üí base
                const pontosRota = [pontoInicial, ...sequenciaFinal, pontoInicial];
                const coordenadas = pontosRota.map(p => `${p.lng},${p.lat}`).join(';');

                const url = `https://router.project-osrm.org/route/v1/driving/${coordenadas}?overview=full&geometries=geojson&steps=true`;
                
                const response = await fetch(url);
                const data = await response.json();

                if (data.code === 'Ok' && data.routes.length > 0) {
                    const rota = data.routes[0];
                    
                    // Calcular trechos individuais com arredondamento pra cima
                    trechosCalculados = [];
                    let kmAcumulado = 0;
                    
                    rota.legs.forEach((leg, index) => {
                        const kmTrecho = Math.ceil(leg.distance / 1000); // Arredonda pra cima
                        const origem = index === 0 ? (pontoInicial.nome || pontoInicial.endereco) : sequenciaFinal[index - 1].nome;
                        const destino = index === rota.legs.length - 1 ? (pontoInicial.nome || pontoInicial.endereco) : sequenciaFinal[index].nome;
                        
                        trechosCalculados.push({
                            numero: index + 1,
                            origem,
                            destino,
                            kmTrecho,
                            temPedagio: false,
                            valorPedagio: 0
                        });
                        
                        kmAcumulado += kmTrecho;
                    });

                    // Desenhar no mapa
                    rotaLayer = L.geoJSON(rota.geometry, {
                        style: {
                            color: '#e74c3c',
                            weight: 5,
                            opacity: 0.8
                        }
                    }).addTo(map);

                    // Marcadores
                    pontosRota.forEach((ponto, index) => {
                        const popupText = index === 0 || index === pontosRota.length - 1 
                            ? `<b>${ponto.nome || 'Base'}</b><br>${ponto.endereco || ''}`
                            : `<b>${ponto.nome}</b><br>${ponto.endereco}`;
                        L.marker([ponto.lat, ponto.lng]).addTo(map)
                            .bindPopup(popupText);
                    });

                    map.fitBounds(rotaLayer.getBounds().pad(0.1));

                    const tempoMinutos = Math.round(rota.duration / 60);
                    totalElement.innerHTML = `${kmAcumulado} km <small>(~${tempoMinutos} min)</small>`;
                    statusDiv.style.display = 'none';
                    document.getElementById('btnPreparar').disabled = false;

                } else {
                    throw new Error('Rota n√£o encontrada');
                }
            } catch (error) {
                console.error('Erro calculando rota:', error);
                totalElement.textContent = 'Erro no c√°lculo';
                statusDiv.innerHTML = '<strong>Erro ao calcular rota. Verifique conex√£o.</strong>';
                alert('Erro ao calcular rota. Tente novamente.');
            }
        }

        // Preparar e salvar viagem
        function prepararSalvamento() {
            if (valorKm === 0) {
                alert('Configure o valor por KM na aba Base primeiro!');
                switchTab('config');
                return;
            }

            if (trechosCalculados.length === 0) {
                alert('Calcule a rota primeiro clicando nas ag√™ncias!');
                return;
            }

            document.getElementById('detalhesViagem').style.display = 'block';
            document.getElementById('btnPreparar').style.display = 'none';
            document.getElementById('btnSalvar').style.display = 'block';
            document.getElementById('btnSalvar').disabled = false;

            const container = document.getElementById('trechosDetalhes');
            container.innerHTML = trechosCalculados.map((trecho, index) => `
                <div class="trecho-item">
                    <div class="trecho-header">Trecho ${trecho.numero}: ${trecho.origem} ‚Üí ${trecho.destino}</div>
                    <div class="trecho-info">
                        <div><strong>Dist√¢ncia:</strong> ${trecho.kmTrecho} km (arredondado)</div>
                        <div><strong>Valor estimado:</strong> R$ ${(trecho.kmTrecho * valorKm).toFixed(2)}</div>
                    </div>
                    <div class="trecho-pedagio">
                        <input type="checkbox" id="pedagio${index}" onchange="atualizarPedagio(${index})">
                        <label for="pedagio${index}">Teve ped√°gio?</label>
                        <input type="number" id="valorPedagio${index}" placeholder="R$ 0,00" step="0.01" min="0" style="width: 100px; display: none; margin-left: 8px;" onchange="atualizarValorPedagio(${index})">
                    </div>
                </div>
            `).join('');
        }

        function atualizarPedagio(index) {
            const checkbox = document.getElementById(`pedagio${index}`);
            const inputValor = document.getElementById(`valorPedagio${index}`);
            
            if (checkbox.checked) {
                inputValor.style.display = 'inline-block';
                trechosCalculados[index].temPedagio = true;
            } else {
                inputValor.style.display = 'none';
                inputValor.value = '';
                trechosCalculados[index].temPedagio = false;
                trechosCalculados[index].valorPedagio = 0;
            }
        }

        function atualizarValorPedagio(index) {
            const valor = parseFloat(document.getElementById(`valorPedagio${index}`).value) || 0;
            trechosCalculados[index].valorPedagio = valor;
        }

        function salvarViagem() {
            const kmInicial = parseInt(document.getElementById('kmInicial').value);
            
            if (isNaN(kmInicial) || kmInicial < 0) {
                alert('Informe o KM inicial do od√¥metro (n√∫mero inteiro).');
                return;
            }

            if (trechosCalculados.length === 0) {
                alert('Nenhum trecho calculado!');
                return;
            }

            let kmAtual = kmInicial;
            const trechosComOdometro = trechosCalculados.map(trecho => {
                const kmFinal = kmAtual + trecho.kmTrecho;
                const trechoCompleto = {
                    ...trecho,
                    kmInicial: kmAtual,
                    kmFinal,
                    valorKm: valorKm,
                    valorEstimado: trecho.kmTrecho * valorKm
                };
                kmAtual = kmFinal;
                return trechoCompleto;
            });

            const viagem = {
                id: Date.now(),
                data: new Date().toISOString(),
                base: posicaoGPSAtual ? posicaoGPSAtual.endereco : base.endereco,
                sequencia: sequenciaAtual.map(s => s.nome), // Ordem das ag√™ncias
                trechos: trechosComOdometro,
                kmTotal: trechosComOdometro.reduce((sum, t) => sum + t.kmTrecho, 0),
                valorTotal: trechosComOdometro.reduce((sum, t) => sum + t.valorEstimado, 0),
                pedagiosTotal: trechosComOdometro.reduce((sum, t) => sum + t.valorPedagio, 0),
                kmInicial: kmInicial,
                kmFinal: kmAtual
            };

            viagens.push(viagem);
            salvarDadosLocais();
            if (driveAuthenticated) {
                sincronizarDados();
            }

            const totalPedagios = viagem.pedagiosTotal.toFixed(2);
            alert(`‚úÖ Viagem salva!\n\nüìè Total: ${viagem.kmTotal} km\nüí∞ Valor KM: R$ ${viagem.valorTotal.toFixed(2)}\nüõ£Ô∏è Ped√°gios: R$ ${totalPedagios > 0 ? totalPedagios : '0,00'}\n\nDetalhes no hist√≥rico.`);
            
            limparSequencia();
            atualizarHistorico();
            atualizarEstatisticas();
            switchTab('historico');
        }

        // Hist√≥rico
        function atualizarHistorico() {
            const lista = document.getElementById('listaHistorico');
            
            if (viagens.length === 0) {
                lista.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìã</div>
                        <p>Nenhuma viagem registrada</p>
                        <small>Salve sua primeira rota!</small>
                    </div>
                `;
                return;
            }

            const viagensOrdenadas = [...viagens].sort((a, b) => new Date(b.data) - new Date(a.data));
            
            lista.innerHTML = viagensOrdenadas.map(viagem => {
                const data = new Date(viagem.data);
                const dataFormatada = data.toLocaleDateString('pt-BR') + ' ' + data.toLocaleTimeString('pt-BR', {hour: '2-digit', minute: '2-digit'});
                const numTrechos = viagem.trechos.length;
                const pedagios = viagem.pedagiosTotal > 0 ? ` + R$ ${viagem.pedagiosTotal.toFixed(2)}` : '';
                
                return `
                    <div class="historico-item">
                        <button class="btn btn-danger historico-delete" onclick="excluirViagem(${viagem.id})" title="Excluir">üóëÔ∏è</button>
                        <div class="historico-date">${dataFormatada}</div>
                        <div class="historico-route">üè† ${viagem.base.substring(0, 30)}... ‚Üí ${numTrechos} trechos</div>
                        <div class="historico-km">
                            üìè ${viagem.kmTotal} km | üí∞ R$ ${viagem.valorTotal.toFixed(2)}${pedagios}
                            <br><small>KM inicial: ${viagem.kmInicial} | Final: ${viagem.kmFinal}</small>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function excluirViagem(id) {
            if (confirm('Excluir esta viagem? Isso remove do hist√≥rico e sync.')) {
                viagens = viagens.filter(v => v.id !== id);
                salvarDadosLocais();
                if (driveAuthenticated) {
                    sincronizarDados();
                }
                atualizarHistorico();
                atualizarEstatisticas();
                alert('Viagem exclu√≠da.');
            }
        }

        // Estat√≠sticas
        function atualizarEstatisticas() {
            const hoje = new Date().toDateString();
            const primeiroDiaMes = new Date(new Date().getFullYear(), new Date().getMonth(), 1).toDateString();

            let kmHoje = 0, kmMes = 0, kmTotal = 0, valorTotal = 0;

            viagens.forEach(viagem => {
                const dataViagem = new Date(viagem.data).toDateString();
                kmTotal += viagem.kmTotal;
                valorTotal += viagem.valorTotal + viagem.pedagiosTotal;

                if (dataViagem === hoje) {
                    kmHoje += viagem.kmTotal;
                }
                if (dataViagem >= primeiroDiaMes) {
                    kmMes += viagem.kmTotal;
                }
            });

            document.getElementById('statHoje').textContent = kmHoje;
            document.getElementById('statMes').textContent = kmMes;
            document.getElementById('statTotal').textContent = kmTotal;
            document.getElementById('statValor').textContent = `R$ ${valorTotal.toFixed(0)}`;
        }

        // Exporta√ß√£o
        function exportarCSV() {
            if (viagens.length === 0) {
                alert('Nenhuma viagem para exportar.');
                return;
            }

            let csv = 'Data,Trecho,Origem,Destino,KM Inicial,KM Final,Dist√¢ncia (km),Valor KM (R$),Ped√°gio (R$)\n';
            
            viagens.forEach(viagem => {
                viagem.trechos.forEach(trecho => {
                    const data = new Date(viagem.data).toLocaleDateString('pt-BR');
                    csv += `"${data}","${trecho.numero}","${trecho.origem}","${trecho.destino}",${trecho.kmInicial},${trecho.kmFinal},${trecho.kmTrecho},"${trecho.valorEstimado.toFixed(2)}","${trecho.valorPedagio.toFixed(2)}"\n';
                });
            });

            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `relatorio-km-${new Date().toISOString().split('T')[0]}.csv`;
            link.click();
        }

        function exportarTXT() {
            if (viagens.length === 0) {
                alert('Nenhuma viagem para exportar.');
                return;
            }

            let txt = 'RELAT√ìRIO DE VIAGENS - Controle de KM\n';
            txt += `Gerado em: ${new Date().toLocaleString('pt-BR')}\n\n`;

            let totalGeralKM = 0, totalGeralValor = 0, totalGeralPedagios = 0;

            viagens.forEach(viagem => {
                const data = new Date(viagem.data).toLocaleDateString('pt-BR');
                txt += `VIAGEM: ${data} - Base: ${viagem.base}\n`;
                txt += `Sequ√™ncia: ${viagem.sequencia.join(' ‚Üí ')} ‚Üí Base\n`;
                txt += `KM Inicial: ${viagem.kmInicial} | KM Final: ${viagem.kmFinal} | Total KM: ${viagem.kmTotal}\n\n`;

                viagem.trechos.forEach(trecho => {
                    txt += `Trecho ${trecho.numero}: ${trecho.origem} ‚Üí ${trecho.destino}\n`;
                    txt += `  KM: ${trecho.kmInicial} ‚Üí ${trecho.kmFinal} (${trecho.kmTrecho} km)\n`;
                    txt += `  Valor KM: R$ ${trecho.valorEstimado.toFixed(2)}\n`;
                    if (trecho.valorPedagio > 0) {
                        txt += `  Ped√°gio: R$ ${trecho.valorPedagio.toFixed(2)}\n`;
                    }
                    txt += '\n';
                });

                txt += `SUBTOTAL: R$ ${viagem.valorTotal.toFixed(2)} + Ped√°gios R$ ${viagem.pedagiosTotal.toFixed(2)} = R$ ${(viagem.valorTotal + viagem.pedagiosTotal).toFixed(2)}\n\n`;

                totalGeralKM += viagem.kmTotal;
                totalGeralValor += viagem.valorTotal;
                totalGeralPedagios += viagem.pedagiosTotal;
            });

            txt += `GRAND TOTAL:\n`;
            txt += `KM Total: ${totalGeralKM}\n`;
            txt += `Valor Total KM: R$ ${totalGeralValor.toFixed(2)}\n`;
            txt += `Ped√°gios Total: R$ ${totalGeralPedagios.toFixed(2)}\n`;
            txt += `VALOR FINAL: R$ ${(totalGeralValor + totalGeralPedagios).toFixed(2)}\n`;

            const blob = new Blob([txt], { type: 'text/plain;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `relatorio-km-${new Date().toISOString().split('T')[0]}.txt`;
            link.click();
        }
    </script>
